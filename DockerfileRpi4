# DockerfileRpi4
# Runtime container for Raspberry Pi 4 (ARM64)

# Use 64-bit Corretto 21 runtime for ARM64
FROM arm64v8/amazoncorretto:21

# Set working directory
WORKDIR /opt/server

# Copy prebuilt JAR from your host
COPY Cosmic.jar ./Server.jar

# Copy any scripts or configuration needed
COPY scripts ./scripts/
COPY config.yaml ./

# Expose the ports used by the server
EXPOSE 8484 7575 7576 7577

# Default command to run the server
ENTRYPOINT ["java", "-jar", "./Server.jar"]
